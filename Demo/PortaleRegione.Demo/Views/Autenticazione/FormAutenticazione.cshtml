@using System.Configuration
@using PortaleRegione.Client.Helpers
@model PortaleRegione.DTO.Autenticazione.LoginRequest

@{
    Layout = null;

    ViewBag.Title = "Autenticazione";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Portale @Html.Raw(AppSettingsConfiguration.Title)</title>

    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">

    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    @Styles.Render("~/Content/css")
    <style>
        .row .col {
            float: none !important;
            margin-left: auto;
            margin-right: auto;
        }
    </style>

    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    @Scripts.Render("~/bundles/lib")
</head>
<body>
<div id="loader-wrapper">
    <div id="loader"></div>
    <div class="loader-section section-left"></div>
    <div class="loader-section section-right"></div>
</div>
<div class="row">
    <div class="col l12 card" style="max-width: 500px">
        <div style="text-align: center;">
            <div class="row">
                <div class="col s12" style="padding-top: 40px">
                    <img src="@Html.Raw(AppSettingsConfiguration.Logo)" alt="@Html.Raw(AppSettingsConfiguration.Title) logo" style="width: 50px;"/>
                </div>
                <div class="col s12">
                    <h4>
                        <b>@Html.Raw(AppSettingsConfiguration.Title)</b>
                    </h4>
                </div>
                <div class="col s12">
                    <h6>Presentazione Emendamenti</h6>
                </div>
            </div>
        </div>
        @using (Html.BeginForm("Login", "Autenticazione", new {ReturnUrl = Context.Request["ReturnUrl"]}))
        {
            @Html.AntiForgeryToken()
            <div class="card-content">
                <div class="form-group">
                    @Html.LabelFor(s => s.Username)
                    @Html.TextBoxFor(s => s.Username, new {@class = "form-control", maxlength = 50 })
                    @Html.ValidationMessageFor(s => s.Username)
                </div>
                <div class="form-group">
                    @Html.LabelFor(s => s.Password)
                    @Html.TextBoxFor(s => s.Password, new {@class = "form-control", type = "password", maxlength = 50 })
                    @Html.ValidationMessageFor(s => s.Password)
                </div>
            </div>
            <div class="card-action right-align">
                <div class="btn chip hoverable green lighten-1 center white-text" onclick="login()">
                    <i class="icon material-icons">lock_open</i> Accedi
                </div>
                <a class="waves-effect waves-light btn modal-trigger" href="#modal1" style="display: none">Modal</a>

                <!-- Modal Structure -->
				<div id="modal1" class="modal bottom-sheet left-align" style="min-height: 100%">
					<div class="modal-content">
                        <h3 class="header">Modifica massiva atti</h3>
                        <ul class="collapsible">
                            <li class="active">
                                <div class="collapsible-header"><i class="material-icons">list</i>Atti selezionati <span class="new badge blue lighten-4 black-text" data-badge-caption=""><b>8</b></span></div>
                                <div class="collapsible-body">
                                    <ul class="collection">
                                        <li class="collection-item">ITL 1234</li>
                                        <li class="collection-item">ITR 2345</li>
                                        <li class="collection-item">ITR 2346</li>
                                        <li class="collection-item">IQT 1034</li>
                                        <li class="collection-item">MOZ 4321</li>
                                        <li class="collection-item">MOZ 4322</li>
                                        <li class="collection-item">MOZ 5011</li>
                                        <li class="collection-item">ODG 20</li>
                                    </ul>
                                </div>
                            </li>
                            <li>
                                <div class="collapsible-header"><i class="material-icons">edit</i>Metadati da modificare</div>
								<div class="collapsible-body">
									<ul class="collection">
										<li class="collection-item avatar">
											<span class="card-title">Codice materia</span>
											<p>
												<input placeholder="es: 123" id="first_name" type="text" class="validate">
											</p>
											<a href="#!" class="secondary-content">
												<p>
													<label>
														<input type="checkbox" />
														<span>Abilitato</span>
													</label>
												</p>
											</a>
										</li>
										<li class="collection-item avatar">
											<span class="card-title">Data annunzio</span>
											<p>
												<input id="first_name" type="text" class="validate" value="10/11/2023">
											</p>
											<a href="#!" class="secondary-content">
												<p>
													<label>
														<input type="checkbox" checked="checked" />
														<span>Abilitato</span>
													</label>
												</p>
											</a>
										</li>
										<li class="collection-item avatar">
											<span class="card-title">Stato</span>
											<p>
												<select>
													<option value="1">Presentato</option>
													<option value="2">In trattazione</option>
													<option value="3" selected>Chiuso completato</option>
												</select>
											</p>
											<a href="#!" class="secondary-content">
												<p>
													<label>
														<input type="checkbox" checked="checked" />
														<span>Abilitato</span>
													</label>
												</p>
											</a>
										</li>
										<li class="collection-item avatar">
											<span class="card-title">Area</span>
											<p>
												<select>
													<option value="1" selected>Maggioranza</option>
													<option value="2">Minoranza</option>
													<option value="3">Misto</option>
												</select>
											</p>
											<a href="#!" class="secondary-content">
												<p>
													<label>
														<input type="checkbox" checked="checked" />
														<span>Abilitato</span>
													</label>
												</p>
											</a>
										</li>
									</ul>
								</div>
                            </li>
                        </ul>
                    </div>
                    <div class="modal-footer">
						<a href="#!" class="modal-close waves-effect waves-green btn-flat blue-text">Modifica massivo</a>
						<a href="#!" class="modal-close waves-effect waves-green btn-flat grey-text">Annulla</a>
					</div>
				</div>
                @{
                    if (!string.IsNullOrEmpty(Model.MessaggioErrore))
                    {
                        <div class="center" style="padding-top: 20px">
                            <span class="field-validation-error">
                                @Model.MessaggioErrore
                            </span>
                        </div>
                    }
                }
            </div>
        }
    </div>
</div>


<script>

    document.addEventListener("DOMContentLoaded",
        function() {
            // INITIALIZE MATERIALIZE v1.0.0 - https://materializecss.com/
            M.AutoInit();
            setTimeout(function() {
                $('body').addClass('loaded');      
            }, 200);
        });

    function login() {
        setTimeout(function () {
            $('body').removeClass('loaded');
        }, 200);
        $('form').submit();
    }

    $("body").on("keyup",
        function(event) {
            // Cancel the default action, if needed
            event.preventDefault();
            // Number 13 is the "Enter" key on the keyboard
            if (event.keyCode === 13) {
                // Trigger the button element with a click
                $('form').submit();
            }
        });
</script>
</body>
</html>
                    contentType: "application/json; charset=utf-8",
                    dataType: "json"
                }).done(function(data) {
                    swal({
                        title: "Procedura completata",
                        text: data.message,
                        icon: "info",
                        button: "Ok"
                    }).then(() => {
                        setSelezionaTutti([]);
                        setListaEmendamenti([]);
                        go(data);
                    });
                }).fail(function(err) {
                    console.log("error", err);
                    ErrorAlert(err.message);
                });

                return false; //This doesn't prevent the form from submitting.
            }
        });
    </script>
}
@model PortaleRegione.DTO.Response.BaseResponse<PortaleRegione.DTO.Domain.GruppiDto>

@{
    ViewBag.Title = "Amministrazione Gruppi";
}

<div class="row">
    <div class="col s12">
        <h5>
            <b>@ViewBag.Title</b>
        </h5>
    </div>
</div>

<div id="gruppiTable" class="row">

    @if (!Model.Results.Any())
    {
        <div class="row">
            <div class="col s12">
                <div class="card-panel panel-warning center">
                    <span class="center">
                        Non ci sono gruppi.
                    </span>
                </div>
            </div>
        </div>
    }

    @foreach (var gruppo in Model.Results)
    {
        
        <div class="col l6 m6 s12">
            <div class="card hoverable">
                <div class="card-content" onclick="">
                    <div class="row valign-wrapper" style="margin: unset !important">
                        <h4>@gruppo.nome_gruppo</h4>
                    </div>
                </div>
                <div class="card-reveal">
                    <span class="card-title grey-text text-darken-4">More info <i class="material-icons right">close</i></span>
                    <p>

                    </p>
                </div>
            </div>
        </div>
    }
</div>

<script>
    
    $(document).ready(async function() {
    });
</script>
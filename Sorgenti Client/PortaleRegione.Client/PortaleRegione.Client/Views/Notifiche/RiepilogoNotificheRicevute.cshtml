@model IEnumerable<PortaleRegione.DTO.Domain.NotificaDto>

@{
    var archivioReq = HttpUtility.ParseQueryString(Request.Url.Query).Get("archivio");
    var archivio = Convert.ToBoolean(archivioReq);
}
<div id="RiepilogoNotificheRicevuteTabs" class="row center-align">
    <div class="col s6">
        <a class="@(!archivio ? "green white-text" : "") chip" style="width: 100%" onclick="go('@Url.Action("RiepilogoNotifiche", "Notifiche", new {is_inviate = false, archivio = false})')">Attive</a>
    </div>
    <div class="col s6">
        <a class="@(archivio ? "green white-text" : "") chip" style="width: 100%" onclick="go('@Url.Action("RiepilogoNotifiche", "Notifiche", new {is_inviate = false, archivio = true})')">Chiuse</a>
    </div>
</div>

<div id="notificheRicevuteTable" class="row">
    @if (!Model.Any())
    {
        <div class="row">
            <div class="col s12">
                <div class="card-panel panel-warning center">
                    <span class="center">
                        Non ci sono notifiche ricevute al momento
                    </span>
                </div>
            </div>
        </div>
    }
    <ul class="collapsible">
        @foreach (var notifica in Model)
        {
            <li>
                @Html.Partial("_CardInvito", notifica)
            </li>
        }
    </ul>
</div>
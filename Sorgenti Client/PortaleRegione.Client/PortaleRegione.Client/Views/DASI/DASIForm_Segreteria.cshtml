@using PortaleRegione.Client.Helpers
@using PortaleRegione.DTO.Enum
@model PortaleRegione.DTO.Model.DASIFormModel

@{
    var isNew = Model.Atto.UIDAtto == Guid.Empty;
    ViewBag.Title = (isNew ? "Nuovo " : "Modifica ") + "Atto Sindacato Ispettivo";

    var backUrl = isNew ? Url.Action("RiepilogoDASI", new { tipo = Model.Atto.Tipo }) : Url.Action("ViewAtto", new { id = Model.Atto.UIDAtto });
}
<script>
    $(document).ready(function () {
        $('#btnSearch').hide();
    });
</script>

<div class="row">
    <div class="col l1 s2">
        <a class="btn-floating waves-effect waves-light grey header-back" onclick="go('@backUrl')">
            <i class="material-icons">arrow_back</i>
        </a>
    </div>
    <div class="col l11 s10">
        <h5>
            <b>
                <span>@ViewBag.Title</span>
                <input id="hfIsNew" type="hidden" value="@isNew" />
            </b>
        </h5>
    </div>
</div>

<div class="card">
    <div class="card-content">
        <div class="row">
            <div class="col s12 center">
                <h5>
                    <b>
                        <span>@PortaleRegione.Common.Utility.GetText_TipoDASI(Model.Atto.Tipo) @Html.Raw(Model.Atto.NAtto)</span>
                    </b>
                </h5>
            </div>
        </div>
        <div class="row">
            <div class="col s12">
                @using (Html.BeginForm("SalvaAtto", "DASI", FormMethod.Post, new { id = "formDASI" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.HiddenFor(m => m.Atto.UIDAtto)
                    @Html.HiddenFor(m => m.Atto.UIDPersonaProponente)
                    @Html.HiddenFor(m => m.Atto.UIDPersonaCreazione)
                    @Html.HiddenFor(m => m.Atto.idRuoloCreazione)
                    @Html.HiddenFor(m => m.Atto.Progressivo)
                    @Html.HiddenFor(m => m.Atto.IDStato)
                    @Html.HiddenFor(m => m.Atto.id_gruppo)
                    @Html.HiddenFor(m => m.Atto.DataCreazione)
                    @Html.HiddenFor(m => m.Atto.DataModifica)
                    @Html.HiddenFor(m => m.Atto.UIDPersonaModifica)
                    @Html.HiddenFor(m => m.Atto.UID_QRCode)
                    @Html.HiddenFor(m => m.Atto.Tipo)

                    <div class="row">
                        <div class="col s12 form-group">
                            <label>Proponente: </label>
                            @Html.DropDownListFor(m => m.Atto.UIDPersonaProponente, new SelectList(Model.ListaGruppo, "UID_persona", "DisplayName"), "Seleziona proponente", new { @class = "form-control" })
                        </div>
                    </div>

                    if (Model.Atto.Tipo == (int)TipoAttoEnum.ITL)
                    {
                        <div class="input-field">
                            <select id='Atto_TipoRisposta'>
                                <option value="@Html.Raw((int) TipoRispostaEnum.ORALE)" @Html.Raw(Model.Atto.IDTipo_Risposta == (int)TipoRispostaEnum.ORALE ? "selected=\"selected\"" : "")>Orale</option>
                                <option value="@Html.Raw((int) TipoRispostaEnum.SCRITTO)" @Html.Raw(Model.Atto.IDTipo_Risposta == (int)TipoRispostaEnum.SCRITTO ? "selected=\"selected\"" : "")>Scritto</option>
                                <option value="@Html.Raw((int) TipoRispostaEnum.COMMISSIONE)" @Html.Raw(Model.Atto.IDTipo_Risposta == (int)TipoRispostaEnum.COMMISSIONE ? "selected=\"selected\"" : "")>Commissione</option>
                            </select>
                            <label for="Atto_TipoRisposta">Tipo Risposta</label>
                        </div>
                    }
                    else if (Model.Atto.Tipo == (int)TipoAttoEnum.ITR)
                    {
                        <div class="input-field">
                            <select id='Atto_TipoRisposta'>
                                <option value="@Html.Raw((int) TipoRispostaEnum.SCRITTO)" @Html.Raw(Model.Atto.IDTipo_Risposta == (int)TipoRispostaEnum.SCRITTO ? "selected=\"selected\"" : "")>Scritto</option>
                                <option value="@Html.Raw((int) TipoRispostaEnum.COMMISSIONE)" @Html.Raw(Model.Atto.IDTipo_Risposta == (int)TipoRispostaEnum.COMMISSIONE ? "selected=\"selected\"" : "")>Commissione</option>
                            </select>
                            <label for="Atto_TipoRisposta">Tipo Risposta</label>
                        </div>
                    }
                    else if (Model.Atto.Tipo == (int)TipoAttoEnum.IQT)
                    {
                        <div class="input-field">
                            <select id='Atto_TipoRisposta' disabled="disabled">
                                <option value="@Html.Raw((int) TipoRispostaEnum.IMMEDIATA)" selected="selected">Immediata</option>
                            </select>
                            <label for="Atto_TipoRisposta">Tipo Risposta</label>
                        </div>
                    }

                    var displayCommissioni = Model.Atto.IDTipo_Risposta == (int)TipoRispostaEnum.COMMISSIONE ? "display: block;" : "display: none;";

                    <div class="input-field" style="padding-top: 10px; @displayCommissioni" id="pnlCommissioni">
                        <select id="Atto_Commissioni">
                            <option value="">Seleziona commissione</option>
                            @foreach (var commissione in Model.CommissioniAttive)
                            {
                                var commissioneSelezionata = Model.Atto.Commissioni.FirstOrDefault(item => item.id_organo == commissione.id_organo);
                                <option value="@commissione.id_organo" @Html.Raw(commissioneSelezionata == null ? "" : "selected")>@commissione.nome_organo</option>
                            }
                        </select>
                    </div>
                    <div class="form-group" style="padding-top: 10px">
                        @Html.LabelFor(s => s.Atto.Oggetto)
                        @Html.TextBoxFor(model => model.Atto.Oggetto, new { @class = "form-control" })
                    </div>
                    <div class="form-group" style="padding-top: 10px">
                        @Html.LabelFor(s => s.Atto.Premesse)
                        @Html.TextAreaFor(model => model.Atto.Premesse, new { @class = "form-control trumbowyg" })
                    </div>

                    <div class="row">
                        <div class="col s12">
                            <label class="black-text" style="margin-left: 20px">
                                <input type="radio" name="Atto.TipoRichiesta" checked="checked" value="@((int)TipoRichiestaEnum.CHIEDE)" />
                                <span>@PortaleRegione.Common.Utility.GetText_TipoRichiestaDASI((int)TipoRichiestaEnum.CHIEDE)</span>
                            </label>
                            <label class="black-text" style="margin-left: 20px">
                                <input type="radio" name="Atto.TipoRichiesta" value="@((int)TipoRichiestaEnum.INVITA)" />
                                <span>@PortaleRegione.Common.Utility.GetText_TipoRichiestaDASI((int)TipoRichiestaEnum.INVITA)</span>
                            </label>
                            <label class="black-text" style="margin-left: 20px">
                                <input type="radio" name="Atto.TipoRichiesta" value="@((int)TipoRichiestaEnum.IMPEGNA)" />
                                <span>@PortaleRegione.Common.Utility.GetText_TipoRichiestaDASI((int)TipoRichiestaEnum.IMPEGNA)</span>
                            </label>
                        </div>
                    </div>
                    <div class="input-field">
                        <select id='Atto_TipoRichiestaDestinatario'>
                            <option value="@Html.Raw((int) TipoRispostaDestinatarioEnum.IL_PRESIDENTE_DELLA_REGIONE)" selected="selected">@PortaleRegione.Common.Utility.GetText_TipoRichiestaDestinatarioDASI((int)TipoRispostaDestinatarioEnum.IL_PRESIDENTE_DELLA_REGIONE)
                            </option>
                            <option value="@Html.Raw((int) TipoRispostaDestinatarioEnum.IL_PRESIDENTE_DELLA_REGIONE_E_ASSESSORE_AUTONOMIA_E_CULTURA)">@PortaleRegione.Common.Utility.GetText_TipoRichiestaDestinatarioDASI((int)TipoRispostaDestinatarioEnum.IL_PRESIDENTE_DELLA_REGIONE_E_ASSESSORE_AUTONOMIA_E_CULTURA)
                            </option>
                            <option value="@Html.Raw((int) TipoRispostaDestinatarioEnum.IL_PRESIDENTE_DELLA_GIUNTA_REGIONALE_E_ASSESSORE_COMPETENTE)">@PortaleRegione.Common.Utility.GetText_TipoRichiestaDestinatarioDASI((int)TipoRispostaDestinatarioEnum.IL_PRESIDENTE_DELLA_GIUNTA_REGIONALE_E_ASSESSORE_COMPETENTE)
                            </option>
                            <option value="@Html.Raw((int) TipoRispostaDestinatarioEnum.IL_PRESIDENTE_DELLA_GIUNTA_REGIONALE_E_GLI_ASSESSORI_COMPETENTI)">@PortaleRegione.Common.Utility.GetText_TipoRichiestaDestinatarioDASI((int)TipoRispostaDestinatarioEnum.IL_PRESIDENTE_DELLA_GIUNTA_REGIONALE_E_GLI_ASSESSORI_COMPETENTI)
                            </option>
                            <option value="@Html.Raw((int) TipoRispostaDestinatarioEnum.IL_PRESIDENTE_E_LA_GIUNTA_REGIONALE)">@PortaleRegione.Common.Utility.GetText_TipoRichiestaDestinatarioDASI((int)TipoRispostaDestinatarioEnum.IL_PRESIDENTE_E_LA_GIUNTA_REGIONALE)
                            </option>
                            <option value="@Html.Raw((int) TipoRispostaDestinatarioEnum.IL_PRESIDENTE_LA_GIUNTA_REGIONALE_E_ASSESSORE_COMPETENTE)">@PortaleRegione.Common.Utility.GetText_TipoRichiestaDestinatarioDASI((int)TipoRispostaDestinatarioEnum.IL_PRESIDENTE_LA_GIUNTA_REGIONALE_E_ASSESSORE_COMPETENTE)
                            </option>
                            <option value="@Html.Raw((int) TipoRispostaDestinatarioEnum.IL_PRESIDENTE_LA_GIUNTA_REGIONALE_E_GLI_ASSESSORI_COMPETENTI)">@PortaleRegione.Common.Utility.GetText_TipoRichiestaDestinatarioDASI((int)TipoRispostaDestinatarioEnum.IL_PRESIDENTE_LA_GIUNTA_REGIONALE_E_GLI_ASSESSORI_COMPETENTI)
                            </option>
                            <option value="@Html.Raw((int) TipoRispostaDestinatarioEnum.LA_GIUNTA_REGIONALE)">@PortaleRegione.Common.Utility.GetText_TipoRichiestaDestinatarioDASI((int)TipoRispostaDestinatarioEnum.LA_GIUNTA_REGIONALE)
                            </option>
                            <option value="@Html.Raw((int) TipoRispostaDestinatarioEnum.LA_GIUNTA_REGIONALE_E_ASSESSORE_COMPETENTE)">@PortaleRegione.Common.Utility.GetText_TipoRichiestaDestinatarioDASI((int)TipoRispostaDestinatarioEnum.LA_GIUNTA_REGIONALE_E_ASSESSORE_COMPETENTE)
                            </option>
                            <option value="@Html.Raw((int) TipoRispostaDestinatarioEnum.ASSESSORE_COMPETENTE)">@PortaleRegione.Common.Utility.GetText_TipoRichiestaDestinatarioDASI((int)TipoRispostaDestinatarioEnum.ASSESSORE_COMPETENTE)
                            </option>
                        </select>
                        <label for="Atto_TipoRichiestaDestinatario"></label>
                    </div>

                    <div class="form-group" style="padding-top: 10px">
                        @Html.TextAreaFor(model => model.Atto.Richiesta, new { @class = "form-control trumbowyg" })
                    </div>

                    @Html.Partial("_DocsPanel", Model)

                }

                <div class="fixed-action-btn">
                    <button class="btn-floating btn-large blue" id="btnSave" type="button" alt="Salva atto">
                        <i class="large material-icons">save</i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_ScriptFormDASI")

<script>
    $(document).ready(function() {
        $('#Atto_TipoRisposta').on("change",
            function() {
                var selected_option_value = $(this).find(":selected").val();
                if (selected_option_value == @Html.Raw((int) TipoRispostaEnum.COMMISSIONE)) {
                    $("#pnlCommissioni").show();
                } else {
                    $("#pnlCommissioni").hide();
                }
            });
    });
</script>

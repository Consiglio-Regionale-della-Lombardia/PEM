@using PortaleRegione.DTO.Enum
@model PortaleRegione.DTO.Model.RiepilogoDASIModel

<div class="col s12">
    <div class="col s12 l2 @(Model.Tipo == TipoAttoEnum.TUTTI ? "counter-active" : "")">
        <button type="button" role="button" class="chip chip-centered hoverable @Html.Raw(TipoAttoCSSConst.TUTTI)" onclick="filtraByTipo(@((int) TipoAttoEnum.TUTTI))" style="width: 100%">
            Tutti (@Model.CountBarData.TUTTI)
        </button>
    </div>
    <div class="col s12 l2 @(Model.Tipo == TipoAttoEnum.ITL ? "counter-active" : "")">
        <button type="button" role="button" class="chip chip-centered hoverable @Html.Raw(TipoAttoCSSConst.ITL)" onclick="filtraByTipo(@((int)TipoAttoEnum.ITL))" style="width: 100%">
            ITL (@Model.CountBarData.ITL)
        </button>
    </div>
    <div class="col s12 l2 @(Model.Tipo == TipoAttoEnum.ITR ? "counter-active" : "")">
        <button type="button" role="button" class="chip chip-centered hoverable @Html.Raw(TipoAttoCSSConst.ITR)" onclick="filtraByTipo(@((int)TipoAttoEnum.ITR))" style="width: 100%">
            ITR (@Model.CountBarData.ITR)
        </button>
    </div>
    <div class="col s12 l2 @(Model.Tipo == TipoAttoEnum.IQT ? "counter-active" : "")">
        <button type="button" role="button" class="chip chip-centered hoverable @Html.Raw(TipoAttoCSSConst.IQT)" onclick="filtraByTipo(@((int)TipoAttoEnum.IQT))" style="width: 100%">
            IQT (@Model.CountBarData.IQT)
        </button>
    </div>
    <div class="col s12 l2 @(Model.Tipo == TipoAttoEnum.MOZ ? "counter-active" : "")">
        <button type="button" role="button" class="chip chip-centered hoverable @Html.Raw(TipoAttoCSSConst.MOZ)" onclick="filtraByTipo(@((int)TipoAttoEnum.MOZ))" style="width: 100%">
            MOZ (@Model.CountBarData.MOZ)
        </button>
    </div>
    <div class="col s12 l2 @(Model.Tipo == TipoAttoEnum.ODG ? "counter-active" : "")">
        <button type="button" role="button" class="chip chip-centered hoverable @Html.Raw(TipoAttoCSSConst.ODG)" onclick="filtraByTipo(@((int)TipoAttoEnum.ODG))" style="width: 100%">
            ODG (@Model.CountBarData.ODG)
        </button>
    </div>
</div>

<script>
    function filtraByTipo(tipo) {
        $('input[name="Tipo"]').val(tipo);
        $('#qTipo').val(tipo);
        $('#qTipo').formSelect();
        filter_dasi_tipo_OnChange();
        filtra();
    }
</script>